<h1>List of Tweets</h1>

<%= @posts.each do |post| %>
  <%= post.text %>
  <%= link_to "Show", post_path(post) %>
  <%= link_to "Edit", edit_post_path(post) %>
  <%= link_to "Delete", post_path(post),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %> <br>
<% end %>

<br>
<%= link_to "Back", root_path %>

